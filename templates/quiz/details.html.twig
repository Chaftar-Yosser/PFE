{% extends 'template.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="container text-center mt-4">
        <h1>Voir details du quiz {{ quiz.name }}</h1>
        <h3>Les technologies du ce quiz :
            {% for skills in quiz.skills %}
                {{ skills.name }}
                {% if not loop.last %} , {% endif %}
            {% endfor %}
        </h3>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
    </div>
    <section class="content">
        <div class="row">
{#            <div class="col-md-6">#}
            <div class="col-xs-8">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Suggestion Users Table</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>name</th>
                                <th>Technologies</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody id="myTable">
                            {% for user in suggestedUsers %}
                                <tr>
                                    <td>{{ user.id }}</td>
                                    <td>{{ user.lastname}}</td>
                                    <td>
                                        {% for skills in user.skills  %}
                                            {{ skills.name }}
                                            {% if not loop.last %}
                                                ,
                                            {% endif %}
                                        {% endfor %}
                                    </td>
                                    <td>
                                        <a  class="btn btn" href="{{ path('affectuser', {'id': quiz.id, 'userId': user.id}) }}" > Add </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>

{#            <div class="col-md-6">#}
            <div class="col-xs-8">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">tableau des users affecter Ã  ce quiz </h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>name</th>
                            </tr>
                            </thead>
                            <tbody id="myTable">
                            {% for user in quiz.users %}
                                <tr>
                                    <td>{{ user.id }}</td>
                                    <td>{{ user.lastname}}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
    </section>
{% endblock %}
