{% extends 'template.html.twig' %}

{% block title %}Les Quiz{% endblock %}

{% block body %}
    <div class="card">
        <div class="box-header">
            <h5 class="card-header">Liste des Quiz
                {% if is_granted('ROLE_ADMIN') %}
                    <a  class="btn btn-sm btn-outline-success" href={{ path("create_quiz") }}>Créer</a>
                {% endif %}
            </h5>
            <div class="row justify-content-end my-4">
                <div class="box-tools col-3">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input id="search" type="text" placeholder="Search..">
                    </div>
                </div>
            </div>
        </div>

        <div class="table-responsive text-nowrap m-2">
            <table class=" table table-hover table-sm">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>technologies</th>
                    <th>nombre <br> de question</th>
                    <th>durée</th>
                    <th>questions</th>
                    <th>Users</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody class="table-border-bottom-0" id="myTable">
                {% for quiz in quiz %}
                    <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>{{ quiz.name}}</strong></td>
                        <td>
                            <ol>
                                {% for skills in quiz.skills %}
                                    <li>{{ skills.name }}</li>
                                {% endfor %}
                            </ol>
                        </td>
                        <td>{{ quiz.nombrequestion}}</td>
                        <td>{{ quiz.time|date('H:i')}} minutes</td>
                        <td>
                            <ol>
                                {% for questions in quiz.questions  %}
                                    <li>{{ questions.title|slice(0,10)}}...</li>
                                {% endfor %}
                            </ol>
                        </td>
                        <td>
                            <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                {% for user in quiz.users %}
                                    <li data-bs-toggle="tooltip" data-popup="tooltip-custom" data-bs-placement="top" class="avatar avatar-xs pull-up" title="" data-bs-original-title="{{ user.lastname}}">
                                        <img src="{{ asset('images/'~user.image) }}" alt="Avatar" class="rounded-circle">
                                    </li>
                                {% endfor %}
                            </ul>
                        </td>
                        <td>
                            <div class="row  d-flex justify-content-center">
                                {% if is_granted('ROLE_ADMIN') %}
                                        <a  class="btn m-1 col-3 btn-sm btn-quiz" href="{{ path("moreInfo_quiz", {"id": quiz.id}) }}"
                                            data-bs-toggle="tooltip" data-popup="tooltip-custom" data-bs-placement="top"  title="" data-bs-original-title="View"
                                        > <i class="bx bx-show-alt me-1 "></i></a>
                                        <a  class="btn m-1  col-3 btn-sm btn-outline-info" href="{{ path("edit_quiz", {"quizId": quiz.id}) }}"
                                            data-bs-toggle="tooltip" data-popup="tooltip-custom" data-bs-placement="top"  title="" data-bs-original-title="Edit"
                                        > <i class="bx bx-edit-alt me-1 "></i></a>
                                        <a class="btn m-1 col-3 btn-sm btn-outline-warning" href="{{ path("details", {"id": quiz.id}) }}"
                                           data-bs-toggle="tooltip" data-popup="tooltip-custom" data-bs-placement="top"  title="" data-bs-original-title="Affecter User"
                                        ><i class="bx bx-user-plus me-1"></i></a>
{#                                carbon:add-alt#}
                            </div>
                            <div class="row  d-flex justify-content-center">

                                <button  class="btn col-3 m-1 btn-sm btn-outline-danger "
                                         data-bs-toggle="modal" data-bs-target="#modalToggle{{ quiz.id }}" data-popup="tooltip-custom" data-bs-placement="top"  title="" data-bs-original-title="Delete"
                                ><i class="bx bx-trash me-1"></i></button>
                                {% endif %}
                                <!-- Modal de confirmation de suppression -->
                                <div class="modal fade" id="modalToggle{{ quiz.id }}" aria-labelledby="modalToggleLabel" tabindex="-1" style="display: none" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-body">
                                                <strong>Etes vous sur pour supprimer ce quiz ???</strong>
                                            </div>
                                            <div class="modal-footer">
                                                <a   class="btn btn-sm btn-danger" href="{{ path("delete_quiz", {"id": quiz.id}) }}">Confirmer
                                                </a>
                                                <a class="btn btn-sm btn-outline-secondary" data-bs-target="#modalToggle2" data-bs-toggle="modal" data-bs-dismiss="modal">
                                                    Annuller
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <a class="btn col-3 m-1 btn-sm btn-outline-secondary" href="{{ path("quiz_participate", {"id": quiz.id}) }}"
                                   data-bs-toggle="tooltip" data-popup="tooltip-custom" data-bs-placement="top"  title="" data-bs-original-title="Participer"
                                ><i class="bx bx-question-mark"></i></a>
                            </div>

                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="content-wrapper">
            <div class="demo-inline-spacing">
                <!-- Basic Pagination -->
                <nav aria-label="Page navigation">
                    <ul class="pagination d-flex text-center justify-content-center">
                        {{ knp_pagination_render(quiz) }}
                    </ul>
                </nav>
            </div>
            <div class="content-backdrop fade"></div>
        </div>
    </div>

    <script>
        $(document).ready(function(){
            $("#search").on("keyup", function() {
                var value = $(this).val().toLowerCase();

                $("#myTable tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>

{% endblock %}
