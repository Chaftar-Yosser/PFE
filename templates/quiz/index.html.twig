{% extends 'template.html.twig' %}

{% block title %}Hello QuizController!{% endblock %}

{% block body %}
    <div class="container text-center mt-4">
        <h1>Voir tout les quiz  </h1>
    </div>

    <section class="content">
        <div class="container">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Tableau des quiz</h3>
                        <div class="box-tools">
                            <div class="input-group input-group-sm" style="width: 150px;">
                                <input id="myInput" type="text" placeholder="Search..">
                            </div>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>name</th>
                                <th>technologies</th>
                                <th>nombre de question</th>
                                <th>durée</th>
                                <th>questions</th>
                                <th>Users</th>
                                <th>
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <a  class="btn btn-success" href={{ path("create_quiz") }}>Créer</a>
                                    {% endif %}
                                </th>
                            </tr>
                            </thead>
                            <tbody id="myTable">
                            {% for quiz in quiz %}
                                <tr>
                                    <td>{{ quiz.id }}</td>
                                    <td>{{ quiz.name}}</td>
                                    <td>
                                        {% for skills in quiz.skills %}
                                            {{ skills.name }}
                                            {% if not loop.last %} , {% endif %}
                                        {% endfor %}
                                    </td>
                                    <td>{{ quiz.nombrequestion}}</td>
                                    <td>{{ quiz.time|date('H:i')}} minutes</td>
                                    <td>
                                        {% for questions in quiz.questions %}
                                            {{ questions.title }}
                                            {% if not loop.last %} , {% endif %}

{#                                            {% for i in 1..quiz.nombrequestion %}#}
{#                                                 {{ i }}#}
{#                                            {% endfor %}#}

                                        {% endfor %}
                                    </td>
                                    <td>
                                        {% for user in quiz.users %}
                                            {{ user.lastname }}
                                            {% if not loop.last %} , {% endif %}
                                        {% endfor %}
                                    </td>
                                    <td >
                                        {% if is_granted('ROLE_ADMIN') %}
                                            <a  class="btn btn-info" href="{{ path("edit_quiz", {"id": quiz.id}) }}"  style="display: inline-block"> Editer </a>
                                            <a  class="btn btn-danger" onclick="return confirm('Etes vous sur ???');
                                                " href={{ path("delete_quiz", {"id": quiz.id}) }} > Supprimer
                                            </a>
                                            <a  class="btn btn-default"  href={{ path("details", {"id": quiz.id}) }} >Details</a>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                        <div class="navigation d-flex text-center justify-content-center">
                            {{ knp_pagination_render(quiz) }}
                        </div>

                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
        </div>
    </section>
{% endblock %}
