{% extends 'template.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="container text-center mt-4">
        <h1>Voir details du quiz {{ quiz.name }}</h1>
        <h3>Les technologies du ce quiz :
            {% for skills in quiz.skills %}
                {{ skills.name }}
                {% if not loop.last %} , {% endif %}
            {% endfor %}
        </h3>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
    </div>
    <section class="content">
        <div class="row">
{#            <div class="col-md-6">#}
            <div class="col-xs-8">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Suggestion Question Table</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>question</th>
                                <th>
                                    <a  class="btn btn" href="{{ path("update_quiz", {"id": quiz.id}) }}"  style="display: inline-block"> Mise Ã  jour  </a>
                                </th>
                            </tr>
                            </thead>
                            <tbody id="myTable">
                            {% for questions in allQuestions %}
                            <tr>
                                <td>{{ questions.id }}</td>
                                <td>{{ questions.title }}</td>
                            </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>

{#            <div class="col-md-6">#}
        </div>
        <div class="d-flex justify-content-end">
            <a  class="btn btn-danger" href={{ path("quiz_index" , {"id": quiz.id} ) }}, style="display: inline-block"> Back To  </a>
        </div>
    </section>
{% endblock %}
