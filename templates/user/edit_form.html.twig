{% block body %}
<div class="container-xxl flex-grow-1 container-p-y">
    <!-- Basic Layout & Basic with Icons -->
    <div class="row">
        <!-- Basic with Icons -->
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">Des Utilisateurs </h5>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-icon-default-email">Nom</label>
                        <div class="col-sm-10">
                            <div class="form-group">
                                <input value="{{ user.lastname }}" class="form-control" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-icon-default-email">Pr√©nom</label>
                        <div class="col-sm-10">
                            <div class="form-group">
                                <input value="{{ user.firstname }}" class="form-control" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-icon-default-email">email</label>
                        <div class="col-sm-10">
                            <div class="form-group">
                                <input value="{{ user.email }}" class="form-control" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 form-label" for="basic-icon-default-message"> {{ form_label(form.role) }}</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                {{ form_widget(form.role) }}
                                <div class="form-error">
                                    {{ form_errors(form.role) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 form-label" for="basic-icon-default-message">{{ form_label(form.skills) }}</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                {{ form_widget(form.skills) }}
                                <div class="form-error">
                                    {{ form_errors(form.skills) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-icon-default-email">image</label>
                        <div class="col-sm-10">
                            <div class="form-group">
                                <img src="{{ asset('images/'~oldImage) }}" />
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-3" hidden>
                        {{ form_rest(form) }}
                    </div>
                    <div class="row justify-content-end">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">{{ button }}</button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
