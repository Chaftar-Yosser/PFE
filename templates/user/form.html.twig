{% block body %}
<div class="container-xxl flex-grow-1 container-p-y">
    <!-- Basic Layout & Basic with Icons -->
    <div class="row">
        <!-- Basic with Icons -->
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">Des Utilisateurs </h5>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">{{ form_label(form.lastname) }}</label>
                            <div class="col-sm-10">
                                <div class="input-group input-group-merge">
                                    <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bx-user"></i></span>
                                    {{ form_widget(form.lastname) }}
                                    <div class="form-error">
                                        {{ form_errors(form.lastname) }}
                                    </div>
                                    <span class="input-group-text"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-icon-default-company">{{ form_label(form.firstname) }}</label>
                            <div class="col-sm-10">
                                <div class="input-group input-group-merge">
                                    <span id="basic-icon-default-company2" class="input-group-text"><i class="bx bx-user"></i></span>
                                    {{ form_widget(form.firstname) }}
                                    <div class="form-error">
                                        {{ form_errors(form.firstname) }}
                                    </div>
                                    <span class="input-group-text"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-icon-default-email">{{ form_label(form.email) }}</label>
                            <div class="col-sm-10">
                                <div class="input-group input-group-merge">
                                    <span class="input-group-text"><i class="bx bx-envelope"></i></span>
                                    {{ form_widget(form.email) }}
                                    <div class="form-error">
                                        {{ form_errors(form.email) }}
                                    </div>
                                    <span id="basic-icon-default-email2" class="input-group-text"></span>
                                </div>
                                <div class="form-text">You can use letters, numbers </div>
                            </div>
                        </div>
                        {% if form.password is defined %}
                            <div class="form-password-toggle row mb-3">
                                <label class="col-sm-2 form-label" for="basic-icon-default-phone">{{ form_label(form.password) }}</label>
                                <div class="col-sm-10">
                                    <div class="input-group input-group-merge">
                                        <span id="basic-icon-default-phone2" class="input-group-text"><i class="bx bx-lock"></i></span>
                                        {{ form_widget(form.password) }}
                                        <div class="form-error">
                                            {{ form_errors(form.password) }}
                                        </div>
                                        <span id="basic-default-password2" class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                        <div class="row mb-3">
                            <label class="col-sm-2 form-label" for="basic-icon-default-message"> {{ form_label(form.role) }}</label>
                            <div class="col-sm-10">
                                <div class="input-group input-group-merge">
                                    {{ form_widget(form.role) }}
                                    <div class="form-error">
                                        {{ form_errors(form.role) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 form-label" for="basic-icon-default-message">{{ form_label(form.skills) }}</label>
                            <div class="col-sm-10">
                                <div class="input-group input-group-merge">
                                    {{ form_widget(form.skills) }}
                                    <div class="form-error">
                                        {{ form_errors(form.skills) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% if form.image is defined %}
                            <div class="row mb-3">
                                <label class="col-sm-2 form-label" for="basic-icon-default-message">{{ form_label(form.image) }}</label>
                                <div class="col-sm-10">
                                    <div class="input-group input-group-merge">
                                        <span id="basic-icon-default-message2" class="input-group-text"><i class="bx bx-image-alt"></i></span>
                                        {{ form_widget(form.image) }}
                                        <div class="form-error">
                                            {{ form_errors(form.image) }}
                                        </div>
                                        <span class="input-group-text"></span>
                                            {#                                    affichage old image on edit#}
                                        {% if oldImage is defined and oldImage is not null %}
                                            <img src="{{ asset('images/'~oldImage) }}" alt="" class="img img-responsive img-preview thumbnail"/>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                        <div class="row justify-content-end">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">{{ button }}</button>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
