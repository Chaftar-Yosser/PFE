{% extends 'template.html.twig' %}

{% block title %}les users{% endblock %}

{% block body %}
    <div class="container text-center mt-4">
        <h1>voir nos users</h1>
    </div>

    <section class="content">
        <div class="container">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endfor %}
        </div>

        <div class="box-header">
            {#            <h3 class="box-title"> Filtre par :</h3>#}
            <div class="container">
                {{ form_start(form) }}
                <div class="form-group ">
                    <div class="row">
                        <div class="col-lg-3 col-2">
                            {{ form_row(form.role) }}
                        </div>
                        <div class="col-lg-3 col-3">
                            <div class="form-group">
                                <button class="btn btn-primary">Rechercher</button>
                            </div>
                        </div>
                        <div class="col-lg-3 col-3" hidden>
                            {{ form_rest(form) }}
                        </div>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">User Table</h3>

                        <div class="box-tools">
                            <div class="input-group input-group-sm" style="width: 150px;">
                                <input id="myInput" type="text" placeholder="Search..">
                            </div>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
{#                                    <th>Fullname</th>#}
                                    <th>Prénom</th>
                                    <th>Nom</th>
                                    <th>Rôle</th>
{#                                    <th>Technologie</th>#}
                                    <th>Email</th>
                                    <th>Image</th>
                                    <th>
                                        <a  class="btn btn-success" href={{ path("create_user") }}>Créer</a>
                                    </th>
                                </tr>
                            </thead>
                            <tbody id="myTable">
                                {% for user in users %}
                                    <tr>
                                        <td>{{ user.id }}</td>
                                        {#      <td>{{ user.fullname}}</td>#}
                                        <td>{{ user.firstname}}</td>
                                        <td>{{ user.lastname}}</td>
                                        <td>
                                            {% for role in user.role  %}
                                                {{ role }}
                                            {% endfor %}
                                        </td>
{#                                        <td>#}
{#                                            {% for skills in user.skills  %}#}
{#                                                {{ skills.name }}#}
{#                                            {% endfor %}#}
{#                                        </td>#}
                                        <td>{{ user.email}}</td>
                                        <td><img src="{{ asset('images/'~user.image) }}" style="height: 100px; width: 100px"></td>
                                        <td >
                                            <a  class="btn btn-info" href={{ path("edit_user", {"id": user.id}) }}, style="display: inline-block"> Editer </a>
                                            <a  class="btn btn-danger" onclick="return confirm('Etes vous sur ???');" href={{ path("delete_user", {"id": user.id}) }} > Supprimer </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>

                        <div class="navigation d-flex text-center justify-content-center">
                            {{ knp_pagination_render(users) }}
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
        </div>
    </section>

    <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>

{% endblock %}
