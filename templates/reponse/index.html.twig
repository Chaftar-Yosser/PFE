{% extends 'template.html.twig' %}

{% block title %}Les Réponses{% endblock %}

{% block body %}
    <div class="card col-lg-9">
        <div class="box-header">
            <h5 class="card-header">Liste des Réponses
                {% if is_granted('ROLE_RH') or is_granted('ROLE_ADMIN') %}
                    <a  class="btn btn-sm btn-outline-success" href={{ path("create_reponse" , {"id": question.id}) }}>Ajouter</a>
                {% endif %}
            </h5>
        </div>
        <div class="row justify-content-end my-2">
            <div class="col">
                <div class="container">
                    <h3>  Question : </h3>
                    <h4>{{ question.title}} </h4>
                </div>
            </div>
            <div class="box-tools col-3">
                <div class="input-group input-group-sm" style="width: 150px;">
                    <input id="myInput" type="text" placeholder="Search..">
                </div>
            </div>

        </div>

        <div class="table-responsive text-nowrap m-2">
            <table class="table table-hover table-sm">
                <thead>
                <tr>
                    <th>title</th>
                    <th>réponse correct</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody id="myTable" class="table-border-bottom-0">
                {% for reponse in reponse %}
                    <tr>
                        <td>
                            <i class="fab fa-angular fa-lg text-danger me-3"></i>
                            <strong>{{ reponse.title}}</strong>

                        </td>
                        <td>{{ reponse.isCorrect}}</td>
                        <td >
                            <a  class="btn btn-sm btn-outline-info" href="{{ path("edit_reponse", {"questionId":question.id , "id": reponse.id}) }}"
                                data-bs-toggle="tooltip" data-popup="tooltip-custom" data-bs-placement="top"  title="" data-bs-original-title="Edit"
                            ><i class="bx bx-edit-alt me-1 "></i></a>

                            <button  class="btn btn-sm btn-outline-danger "
                                     data-bs-toggle="modal" data-bs-target="#modalToggle{{ reponse.id }}" data-popup="tooltip-custom" data-bs-placement="top"  title="" data-bs-original-title="Delete"
                            ><i class="bx bx-trash me-1"></i></button>
                            <!-- Modal de confirmation de suppression -->
                            <div class="modal fade" id="modalToggle{{ reponse.id }}" aria-labelledby="modalToggleLabel" tabindex="-1" style="display: none" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-body">
                                            Êtes-vous sûr de pour supprimer cett réponse ???
                                        </div>
                                        <div class="modal-footer">
                                            <a   class="btn btn-sm btn-danger" href="{{  path("delete_reponse", {"questionId":question.id , "id": reponse.id}) }}">Confirmer
                                            </a>
                                            <a class="btn btn-sm btn-outline-secondary" data-bs-target="#modalToggle2" data-bs-toggle="modal" data-bs-dismiss="modal">
                                                Annuller
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="content-wrapper">
            <div class="demo-inline-spacing">
                <!-- Basic Pagination -->
                <nav aria-label="Page navigation">
                    <ul class="pagination d-flex text-center ">
                        <a  class="btn btn-danger" href={{ path("question_index" , {"id": question.id} ) }}, style="display: inline-block"> Back To  </a>
                    </ul>
                </nav>
            </div>
            <div class="content-backdrop fade"></div>
        </div>
    </div>
{% endblock %}
