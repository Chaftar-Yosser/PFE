{% extends 'template.html.twig' %}

{% block title %}Les Réponses{% endblock %}

{% block body %}
    <section class="content">
        <div class="container">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
        </div>
    </section>



    <div class="card col-lg-9">
        <div class="box-header">
            <h5 class="card-header">Liste des Réponses
                {% if is_granted('ROLE_RH') or is_granted('ROLE_ADMIN') %}
                    <a  class="btn btn-success" href={{ path("create_reponse" , {"id": question.id}) }}>Ajouter</a>
                {% endif %}
            </h5>
        </div>
        <div class="row justify-content-end my-2">
            <div class="col">
                <div class="container">
                    <h3>  Question : </h3>
                    <h4>{{ question.title}} </h4>
                </div>
            </div>
            <div class="box-tools col-3">
                <div class="input-group input-group-sm" style="width: 150px;">
                    <input id="myInput" type="text" placeholder="Search..">
                </div>
            </div>

        </div>

        <div class="table-responsive text-nowrap m-2">
            <table class="table table-hover table-sm">
                <thead>
                <tr>
                    <th>title</th>
                    <th>réponse correct</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody id="myTable" class="table-border-bottom-0">
                {% for reponse in reponse %}
                    <tr>
                        <td>
                            <i class="fab fa-angular fa-lg text-danger me-3"></i>
                            <strong>{{ reponse.title}}</strong>

                        </td>
                        <td>{{ reponse.isCorrect}}</td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <a class="dropdown-item" href="{{ path("edit_reponse", {"questionId":question.id , "id": reponse.id}) }}"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                        <a class="dropdown-item" onclick="return confirm('Etes vous sur ???'); " href="{{ path("delete_reponse", {"questionId":question.id , "id": reponse.id}) }}"><i class="bx bx-trash me-1"></i> Delete</a>
                                    {% endif %}
                                </div>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="content-wrapper">
            <div class="demo-inline-spacing">
                <!-- Basic Pagination -->
                <nav aria-label="Page navigation">
                    <ul class="pagination d-flex text-center ">
                        <a  class="btn btn-danger" href={{ path("question_index" , {"id": question.id} ) }}, style="display: inline-block"> Back To  </a>
                    </ul>
                </nav>
            </div>
            <div class="content-backdrop fade"></div>
        </div>
    </div>
{% endblock %}
