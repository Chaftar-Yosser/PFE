{% extends 'template.html.twig' %}

{% block title %} Les Congés {% endblock %}

{% block body %}
    <section class="content">
        <div class="container">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
        </div>

    </section>


    <div class="card">
        <div class="box-header">
            <h5 class="card-header">Liste des Congés
                {% if is_granted('ROLE_RH') or is_granted('ROLE_ADMIN') %}
                    <a  class="btn btn-success" href={{ path("create_leave") }}>Ajouter</a>
                {% endif %}
            </h5>

            <!--filter-->
            <div class="row justify-content-end my-4">
                <div class="col">
                    <div class="container">
                        {{ form_start(form) }}
                        <div class="form-group ">
                            <div class="row">
                                <div class="col-lg-3 col-2">
                                    {{ form_row(form.userFrom) }}
                                </div>
                                <div class="col-lg-3 col-2">
                                    {{ form_row(form.Leave_type) }}
                                </div>
                                <div class="col-lg-3 col-3 pt-4">
                                    <button class="btn btn-primary">Rechercher</button>
                                </div>
                                <div class="col-lg-3 col-3" hidden>
                                    {{ form_rest(form) }}
                                </div>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>

                </div>
                <div class="box-tools col-3">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input id="myInput" type="text" placeholder="Search..">
                    </div>
                </div>

            </div>
        </div>

        <div class="table-responsive text-nowrap m-2">
            <table class="table table-hover table-sm">
                <thead>
                <tr>
                    <th>user from</th>
                    <th>user to</th>
                    <th>type</th>
                    <th>date_debut</th>
                    <th>date_fin</th>
                    <th>status</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody id="myTable" class="table-border-bottom-0">
                {% for leave in leaves %}
                    <tr>
                        <td>
                            <i class="fab fa-angular fa-lg text-danger me-3"></i>
                            <strong>{{ leave.userFrom.lastname }}</strong>
                        </td>
                        <td>{{ leave.userTo.lastname }}</td>
                        <td>{{ leave.Leavetype.name }}</td>
                        <td>{{ leave.startDate|date('d/m/Y')}}</td>
                        <td>{{ leave.endDate|date('d/m/Y')}}</td>
                        <td>
                            <span class="badge {% if (leave.status == "En cours") %} bg-label-warning
                                    {% elseif( leave.status == "Réfuser") %} bg-label-danger
                                    {% else %} bg-label-info  {% endif %} me-1">
                                {{ leave.status}}
                            </span>
                        </td>
                        <td>
                            <a  class="btn btn-sm btn-outline-info" href="{{ path("edit_leave", {"id": leave.id}) }}"
                                data-bs-toggle="tooltip" data-popup="tooltip-custom" data-bs-placement="top"  title="" data-bs-original-title="Edit"
                            > <i class="bx bx-edit-alt me-1 "></i></a>
                            <a  class="btn btn-sm btn-outline-danger" onclick="return confirm('Etes vous sur ???');" href="{{ path("delete_leave", {"id": leave.id}) }}"
                                data-bs-toggle="tooltip" data-popup="tooltip-custom" data-bs-placement="top"  title="" data-bs-original-title="Delete"
                            ><i class="bx bx-trash me-1"></i></a>
                            {% if is_granted('ROLE_ADMIN') %}
                                <a class="btn btn-sm btn-outline-secondary" href="{{ path("update_leave", {"id": leave.id}) }}"
                                   data-bs-toggle="tooltip" data-popup="tooltip-custom" data-bs-placement="top"  title="" data-bs-original-title="Update"
                                ><i class="bx bx-edit-alt me-1"></i></a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="content-wrapper">
            <div class="demo-inline-spacing">
                <!-- Basic Pagination -->
                <nav aria-label="Page navigation">
                    <ul class="pagination d-flex text-center justify-content-center">
                        {{ knp_pagination_render(leaves) }}
                    </ul>
                </nav>
            </div>
            <div class="content-backdrop fade"></div>
        </div>
    </div>

    <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });

        $(document).ready( function () {
            $('#table_id').DataTable({
                paging: false ,
                searching: false
            });
        });
    </script>

{% endblock %}
