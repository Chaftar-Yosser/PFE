{% extends 'template.html.twig' %}

{% block title %}Les Projets {% endblock %}

{% block body %}
    <div class="card">
        <div class="box-header">
            <h5 class="card-header">Liste des Projets
                {% if is_granted('ROLE_ADMIN') %}
                    <a class="modal-effect btn btn-sm btn-outline-success" href="{{ path("create_project") }}">Ajouter</a>
                {% endif %}
            </h5>

            <div class="row justify-content-end">
                <div class="box-tools col-3">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input id="search" type="text" placeholder="Search..">
                    </div>
                </div>

            </div>
        </div>

        <div class="table-responsive text-nowrap m-2">
            <table class="table table-hover table-sm">
                <thead>
                <tr>
                    <th>name</th>
                    <th>status</th>
                    <th>Technologies</th>
                    <th>duree</th>
                    <th>date_debut</th>
                    <th>date_fin</th>
                    <th>Avancement</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody id="myTable" class="table-border-bottom-0">
                {% for projectItem in projects %}
                    {% set project = projectItem.project %}
                    {% set percent = projectItem.percent %}
                    <tr>
                        <td>
                            <i class="fab fa-angular fa-lg text-danger me-3"></i>
                            <strong>{{ project.name }}</strong>
                        </td>
                        <td>
                            <span class="badge {% if (project.status == "En Cours") %} bg-label-warning
                                    {% elseif( project.status == "En Pause") %} bg-label-danger
                                    {% else %} bg-label-success  {% endif %} me-1">
                                {{ project.status}}
                            </span>
                        </td>
                        <td>
                            {% for skills in project.skills %}
                                {{ skills.name }}
                            {% endfor %}
                        </td>
                        <td>{{ project.duree}}</td>
                        <td>{{ project.datedebut|date('d/m/Y')}}</td>
                        <td>{{ project.datefin|date('d/m/Y')}}</td>
                        <td>
                            <div class="demo-vertical-spacing">
                                <div class="progress">
                                    <div
                                            class="progress-bar"
                                            role="progressbar"
                                            style="width:{{ percent }}%"
                                            aria-valuenow="{{ percent }}%"
                                            aria-valuemin="0"
                                            aria-valuemax="100"
                                    >
                                        {{ percent }}
                                        {% if not loop.last %} % {% endif %}
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td>
                            {% if is_granted('ROLE_ADMIN') %}
                                <a  class="btn btn-sm btn-outline-info" href="{{ path("edit_project", {"id": project.id}) }}"
                                    data-bs-toggle="tooltip" data-popup="tooltip-custom" data-bs-placement="top"  title="" data-bs-original-title="Edit"
                                > <i class="bx bx-edit-alt me-1 "></i></a>


                                <button  class="btn btn-sm btn-outline-danger "
                                         data-bs-toggle="modal" data-bs-target="#modalToggle{{ project.id }}" data-popup="tooltip-custom" data-bs-placement="top"  title="" data-bs-original-title="Delete"
                                ><i class="bx bx-trash me-1"></i></button>
                                <!-- Modal de confirmation de suppression -->
                                <div class="modal fade" id="modalToggle{{ project.id }}" aria-labelledby="modalToggleLabel" tabindex="-1" style="display: none" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-body">
                                                <strong>Etes vous sur pour supprimer ce projet ???</strong>
                                            </div>
                                            <div class="modal-footer">
                                                <a   class="btn btn-sm btn-danger" href="{{ path("delete_project", {"id": project.id}) }}">Confirmer
                                                </a>
                                                <a class="btn btn-sm btn-outline-secondary" data-bs-target="#modalToggle2" data-bs-toggle="modal" data-bs-dismiss="modal">
                                                    Annuller
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <a class="btn btn-sm btn-outline-warning" href="{{ path("show_details", {"id": project.id}) }}"
                                   data-bs-toggle="tooltip" data-popup="tooltip-custom" data-bs-placement="top"  title="" data-bs-original-title="Details"
                                ><i class="bx bx-show-alt me-1"></i></a>
                            {% endif %}
                            <a class="btn btn-sm btn-outline-secondary" href="{{ path("sprint_index", {"id": project.id}) }}"
                               data-bs-toggle="tooltip" data-popup="tooltip-custom" data-bs-placement="top"  title="" data-bs-original-title="Sprint"
                            ><i class="bx bx-edit-alt me-1"></i></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="content-wrapper">
            <div class="demo-inline-spacing">
                <!-- Basic Pagination -->
                <nav aria-label="Page navigation">
                    <ul class="pagination d-flex text-center justify-content-center">
                        {{ knp_pagination_render(projects) }}
                    </ul>
                </nav>
            </div>
            <div class="content-backdrop fade"></div>
        </div>
    </div>

    <script>
        $(document).ready(function(){
            $("#search").on("keyup", function() {
                var value = $(this).val().toLowerCase();

                $("#myTable tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>

{% endblock %}
