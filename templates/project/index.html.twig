{% extends 'template.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="container text-center mt-4">
        <h1>Voir liste des projets </h1>
    </div>


    <section class="content">
        <div class="container">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Projets Table</h3>
                            <div class="box-tools">
                                <div class="input-group input-group-sm" style="width: 150px;">
                                    <input id="myInput" type="text" placeholder="Search..">
                                </div>
                            </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>name</th>
                                    <th>status</th>
                                    <th>Technologies</th>
                                    <th>duree</th>
                                    <th>date_debut</th>
                                    <th>date_fin</th>
                                    <th>
                                        {% if is_granted('ROLE_ADMIN') %}
                                            <a  class="btn btn-success" href={{ path("create_project") }}>Cr√©er</a>
                                        {% endif %}
                                    </th>
                                </tr>
                            </thead>
                            <tbody id="myTable">
                            {% if is_granted('ROLE_ADMIN') %}
                                {% for projectItem in projects %}
                                    {% set project = projectItem.project %}
                                    {% set percent = projectItem.percent %}
                                    <tr>
                                        <td>{{ project.id }}</td>
                                        <td>{{ project.name }}</td>
                                        <td>{{ project.status }}</td>
                                        <td>
                                            {% for skills in project.skills %}
                                                {{ skills.name }}
                                            {% endfor %}
                                        </td>
                                        <td>{{ project.duree}}</td>
                                        <td>{{ project.datedebut|date('d/m/Y')}}</td>
                                        <td>{{ project.datefin|date('d/m/Y')}}</td>
                                        <td>
                                            {{ percent }}
                                            {% if not loop.last %}
                                             %
                                            {% endif %}
                                        </td>
                                        <td >
                                            {% if is_granted('ROLE_ADMIN') %}
                                                <a  class="btn btn-info" href={{ path("edit_project", {"id": project.id}) }}, style="display: inline-block"> Editer </a>
                                                <a  class="btn btn-danger" onclick="return confirm('Etes vous sur ???');" href={{ path("delete_project", {"id": project.id}) }} > Supprimer </a>
                                            {% endif %}
                                            <a  class="btn btn-warning"  href={{ path("sprint_index", {"id": project.id}) }} >Sprint</a>
                                            <a  class="btn btn-default"  href={{ path("show_details", {"id": project.id}) }} >Details</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                {% else %}
                                    {% for project in projects %}
                                        <tr>
                                            <td>{{ project.id }}</td>
                                            <td>{{ project.name }}</td>
                                            <td>{{ project.status }}</td>
                                            <td>
                                                {% for skills in project.skills %}
                                                    {{ skills.name }}
                                                {% endfor %}
                                            </td>
                                            <td>{{ project.duree}}</td>
                                            <td>{{ project.datedebut|date('d/m/Y')}}</td>
                                            <td>{{ project.datefin|date('d/m/Y')}}</td>
                                            <td >
                                                <a  class="btn btn-warning"  href={{ path("sprint_index", {"id": project.id}) }} >Sprint</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                            {% endif %}
                            </tbody>
                        </table>
                        <div class="navigation d-flex text-center justify-content-center">
                            {{ knp_pagination_render(projects) }}
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
        </div>
    </section>

    <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
{% endblock %}
