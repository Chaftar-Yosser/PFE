{% extends 'template.html.twig' %}

{% block title %}Les Projets {% endblock %}

{% block body %}
    <section class="content">
        <div class="container">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
        </div>
    </section>


    <div class="card">
        <div class="box-header">
            <h5 class="card-header">Liste des Projets
                {% if is_granted('ROLE_ADMIN') %}
                    <a class="modal-effect btn btn-sm btn-outline-success" href="{{ path("create_project") }}">Ajouter</a>
                {% endif %}
            </h5>
        </div>

        <div class="table-responsive text-nowrap m-2">
            <table class="table table-hover table-sm">
                <thead>
                <tr>
                    <th>name</th>
                    <th>status</th>
                    <th>Technologies</th>
                    <th>duree</th>
                    <th>date_debut</th>
                    <th>date_fin</th>
                    <th>Avancement</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody id="myTable" class="table-border-bottom-0">
                {% for projectItem in projects %}
                    {% set project = projectItem.project %}
                    {% set percent = projectItem.percent %}
                    <tr>
                        <td>
                            <i class="fab fa-angular fa-lg text-danger me-3"></i>
                            <strong>{{ project.name }}</strong>
                        </td>
                        <td>
                            <span class="badge {% if (project.status == "En Cours") %} bg-label-warning
                                    {% elseif( project.status == "En Pause") %} bg-label-danger
                                    {% else %} bg-label-success  {% endif %} me-1">
                                {{ project.status}}
                            </span>
                        </td>
                        <td>
                            {% for skills in project.skills %}
                                {{ skills.name }}
                            {% endfor %}
                        </td>
                        <td>{{ project.duree}}</td>
                        <td>{{ project.datedebut|date('d/m/Y')}}</td>
                        <td>{{ project.datefin|date('d/m/Y')}}</td>
                        <td>
                            <div class="demo-vertical-spacing">
                                <div class="progress">
                                    <div
                                            class="progress-bar"
                                            role="progressbar"
                                            style="width:{{ percent }}%"
                                            aria-valuenow="{{ percent }}%"
                                            aria-valuemin="0"
                                            aria-valuemax="100"
                                    >
                                        {{ percent }}
                                        {% if not loop.last %} % {% endif %}
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <a class="dropdown-item" href="{{ path("edit_project", {"id": project.id}) }}"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                        <a class="dropdown-item" onclick="return confirm('Etes vous sur ???'); " href="{{ path("delete_project", {"id": project.id}) }}"><i class="bx bx-trash me-1"></i> Delete</a>
                                    {% endif %}
                                    <a class="dropdown-item" href="{{ path("sprint_index", {"id": project.id}) }}"><i class="bx bx-edit-alt me-1"></i> Sprint</a>
                                    <a class="dropdown-item" href="{{ path("show_details", {"id": project.id}) }}"><i class="bx bx-edit-alt me-1"></i> Details</a>

                                </div>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="content-wrapper">
            <div class="demo-inline-spacing">
                <!-- Basic Pagination -->
                <nav aria-label="Page navigation">
                    <ul class="pagination d-flex text-center justify-content-center">
                        {{ knp_pagination_render(projects) }}
                    </ul>
                </nav>
            </div>
            <div class="content-backdrop fade"></div>
        </div>

        <hr class="m-0" />
    </div>


    <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
{% endblock %}
