{% extends 'template.html.twig' %}

{% block title %} Les Technologies {% endblock %}

{% block body %}

    <section class="content">
        <div class="container">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
        </div>
    </section>

    <div class="card col-lg-6">
        <div class="box-header">
            <h5 class="card-header">Liste des technologies  <a  class="btn btn-success" href={{ path("create_skills") }}>Cr√©er</a></h5>
            <div class="row justify-content-end my-2">
                <div class="box-tools col-lg-5">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input id="myInput" type="text" placeholder="Search..">
                    </div>
                </div>
            </div>
        </div>

        <div class="table-responsive text-nowrap m-2">
            <table class="table table-hover table-sm">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                {% for skills in skills %}
                    <tr>
                        <td>
                            <i class="fab fa-angular fa-lg text-danger me-3"></i>
                            <strong> {{ skills.name}}</strong>
                        </td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="{{ path("edit_skills", {"id": skills.id}) }}"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                    <a class="dropdown-item" onclick="return confirm('Etes vous sur ???'); " href="{{ path("delete_skills", {"id": skills.id}) }}"><i class="bx bx-trash me-1"></i> Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="content-wrapper">
            <div class="demo-inline-spacing">
                <!-- Basic Pagination -->
                <nav aria-label="Page navigation">
                    <ul class="pagination d-flex text-center justify-content-center">
                        {{ knp_pagination_render(skills) }}
                    </ul>
                </nav>
            </div>
            <div class="content-backdrop fade"></div>
        </div>
    </div>

{% endblock %}
