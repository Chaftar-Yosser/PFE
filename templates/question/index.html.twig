{% extends 'template.html.twig' %}

{% block title %} Les Questions de Quiz {% endblock %}

{% block body %}

    <section class="content">
        <div class="container">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
        </div>
    </section>


    <div class="card">
        <div class="box-header">
            <h5 class="card-header">Liste des questions
                {% if is_granted('ROLE_RH') or is_granted('ROLE_ADMIN') %}
                    <a  class="btn btn-success" href={{ path("create_question") }}>Ajouter</a>
                {% endif %}
            </h5>
            <div class="row justify-content-end my-4">
                <div class="col">
                    <div class="container">
                        {{ form_start(form) }}
                        <div class="form-group ">
                            <div class="row">
                                <div class="col-lg-3 col-2">
                                    {{ form_row(form.skills) }}
                                </div>
                                <div class="col-lg-3 col-3 pt-4">
                                    <button class="btn btn-primary">Rechercher</button>
                                </div>
                                <div class="col-lg-3 col-3" hidden>
                                    {{ form_rest(form) }}
                                </div>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>

                </div>
                <div class="box-tools col-3">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input id="myInput" type="text" placeholder="Search..">
                    </div>
                </div>

            </div>
        </div>

        <div class="table-responsive text-nowrap m-2">
            <table class="table table-hover table-sm">
                <thead>
                <tr>
                    <th>Questions</th>
                    <th>Score</th>
                    <th>Technologie</th>
                    {% if is_granted('ROLE_ADMIN') %}
                        <th>Actions</th>
                    {% endif %}
                </tr>
                </thead>
                <tbody id="myTable" class="table-border-bottom-0">
                {% for question in question %}
                    <tr>
                        <td>
                            <i class="fab fa-angular fa-lg text-danger me-3"></i>
                            <strong>
                                {{ question.title}}
                            </strong>
                        </td>
                        <td>{{ question.score}}</td>
                        <td>{{ question.skills.name}}</td>
                        <td>
                            {% if is_granted('ROLE_RH') or is_granted('ROLE_ADMIN') %}
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="{{ path("edit_question", {"id": question.id}) }}"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                        <a class="dropdown-item" onclick="return confirm('Etes vous sur ???'); " href="{{ path("delete_question", {"id": question.id}) }}"><i class="bx bx-trash me-1"></i> Delete</a>
                                        <a class="dropdown-item" href="{{ path("reponse_index" , {"id": question.id}) }}"><i class="bx bx-edit-alt me-1"></i> Details</a>
                                    </div>
                                </div>
                            {% endif %}
                        </td>

                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="content-wrapper">
            <div class="demo-inline-spacing">
                <!-- Basic Pagination -->
                <nav aria-label="Page navigation">
                    <ul class="pagination d-flex text-center justify-content-center">
                        {{ knp_pagination_render(question) }}
                    </ul>
                </nav>
            </div>
            <div class="content-backdrop fade"></div>
        </div>
    </div>

{% endblock %}
