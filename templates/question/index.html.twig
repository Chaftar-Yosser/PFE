{% extends 'template.html.twig' %}

{% block title %} Les Questions de Quiz {% endblock %}

{% block body %}
    <div class="card">
        <div class="box-header">
            <h5 class="card-header">Liste des questions
                {% if is_granted('ROLE_RH') or is_granted('ROLE_ADMIN') %}
                    <a  class="btn btn-sm btn-outline-success" href={{ path("create_question") }}>Ajouter</a>
                {% endif %}
            </h5>
            <div class="row justify-content-end my-4">
                <div class="col">
                    <div class="container">
                        {{ form_start(form) }}
                        <div class="form-group ">
                            <div class="row">
                                <div class="col-lg-3 col-2">
                                    {{ form_row(form.skills) }}
                                </div>
                                <div class="col-lg-3 col-3 pt-4">
                                    <button class="btn btn-primary">Rechercher</button>
                                </div>
                                <div class="col-lg-3 col-3" hidden>
                                    {{ form_rest(form) }}
                                </div>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>

                </div>
                <div class="box-tools col-3">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input id="search" type="text" placeholder="Search..">
                    </div>
                </div>

            </div>
        </div>

        <div class="table-responsive text-nowrap m-2">
            <table class="table table-hover table-sm">
                <thead>
                <tr>
                    <th>Questions</th>
                    <th>Score</th>
                    <th>Technologie</th>
                    {% if is_granted('ROLE_ADMIN') %}
                        <th>Actions</th>
                    {% endif %}
                </tr>
                </thead>
                <tbody id="myTable" class="table-border-bottom-0">
                {% for question in question %}
                    <tr>
                        <td>
                            <i class="fab fa-angular fa-lg text-danger"></i>
                            <strong>
                                {{ question.title}}
                            </strong>
                        </td>
                        <td>{{ question.score}}</td>
                        <td>{{ question.skills.name}}</td>
                        <td>
                            {% if is_granted('ROLE_ADMIN') %}
                                <a  class="btn btn-sm btn-outline-info" href="{{ path("edit_question", {"id": question.id}) }}"
                                    data-bs-toggle="tooltip" data-popup="tooltip-custom" data-bs-placement="top"  title="" data-bs-original-title="Edit"
                                > <i class="bx bx-edit-alt me-1 "></i></a>

                                <button  class="btn btn-sm btn-outline-danger "
                                         data-bs-toggle="modal" data-bs-target="#modalToggle {{ question.id }}" data-popup="tooltip-custom" data-bs-placement="top"  title="" data-bs-original-title="Delete"
                                ><i class="bx bx-trash me-1"></i></button>
                                <!-- Modal de confirmation de suppression -->
                                <div class="modal fade" id="modalToggle {{ question.id }}" aria-labelledby="modalToggleLabel" tabindex="-1" style="display: none" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-body">
                                                Êtes-vous sûr de pour supprimer ce question ???
                                            </div>
                                            <div class="modal-footer">
                                                <a   class="btn btn-sm btn-danger" href="{{ path("delete_question", {"id": question.id}) }}">Confirmer
                                                </a>
                                                <a class="btn btn-sm btn-outline-secondary" data-bs-target="#modalToggle2" data-bs-toggle="modal" data-bs-dismiss="modal">
                                                    Annuller
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <a class="btn btn-sm btn-outline-warning" href="{{ path("reponse_index" , {"id": question.id}) }}"
                                   data-bs-toggle="tooltip" data-popup="tooltip-custom" data-bs-placement="top"  title="" data-bs-original-title="Details"
                                ><i class="bx bx-show-alt me-1"></i></a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="content-wrapper">
            <div class="demo-inline-spacing">
                <!-- Basic Pagination -->
                <nav aria-label="Page navigation">
                    <ul class="pagination d-flex text-center justify-content-center">
                        {{ knp_pagination_render(question) }}
                    </ul>
                </nav>
            </div>
            <div class="content-backdrop fade"></div>
        </div>
    </div>

    <script>
        $(document).ready(function(){
            $("#search").on("keyup", function() {
                var value = $(this).val().toLowerCase();

                $("#myTable tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>

{% endblock %}
