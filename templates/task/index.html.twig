{% extends 'template.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="container text-center mt-4">
        <h1>voir liste des tâches</h1>
    </div>


    <section class="content">
        <div class="container">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">tâches Table</h3>

                        {#                        <div class="box-tools">#}
                        {#                            <div class="input-group input-group-sm" style="width: 150px;">#}
                        {#                                <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">#}

                        {#                                <div class="input-group-btn">#}
                        {#                                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>#}
                        {#                                </div>#}
                        {#                            </div>#}
                        {#                        </div>#}
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>name</th>
                                <th>project</th>
                                <th>status</th>
                                <th>priorite</th>
                                <th>duree</th>
                                <th>date_debut</th>
                                <th>date_fin</th>
                                <th>Users</th>
                                <th>
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <a  class="btn btn-success" href={{ path("create_task") }}>Créer</a>
                                    {% endif %}
                                </th>
                            </tr>
                            </thead>
                            <tbody>

                            {% for task in Tasks %}
                                <tr>
                                    <td>{{ task.id }}</td>
                                    <td>{{ task.taskname}}</td>
                                    <td>{{ task.projects.name}}</td>
                                    <td>{{ task.status}}</td>
                                    <td>{{ task.priorite }}</td>
                                    <td>{{ task.duree}}</td>
                                    <td>{{ task.datedebut|date('d/m/Y')}}</td>
                                    <td>{{ task.datefin|date('d/m/Y')}}</td>
                                    <td>
                                        {% for user in task.users  %}
                                            {{ user.lastName }}
                                        {% endfor %}
                                    </td>
                                    <td >
                                        {% if is_granted('ROLE_ADMIN') %}
                                            <a  class="btn btn-info" href={{ path("edit_task", {"id": task.id}) }}, style="display: inline-block"> Editer </a>
                                            <a  class="btn btn-danger" onclick="return confirm('Etes vous sur ???');"
                                                href={{ path("delete_task", {"id": task.id}) }} > Supprimer </a>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                        <div class="navigation d-flex text-center justify-content-center">
                            {{ knp_pagination_render(Tasks) }}
                        </div>

                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
        </div>
    </section>
{% endblock %}
