{% extends 'template.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="container text-center mt-4">
        <h1>tâches </h1>
    </div>
    <section class="content">
        <div class="container">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
        </div>
        <div class="box-header">
            <div class="container">
                {{ form_start(form) }}
                <div class="form-group ">
                    <div class="row">
                        <div class="col-lg-3 col-2">
                            {{ form_row(form.projects) }}
                        </div>
                        <div class="col-lg-3 col-2">
                            {{ form_row(form.sprint) }}
                        </div>
                        <div class="col-lg-3 col-2">
                            {{ form_row(form.status) }}
                        </div>
                        <div class="col-lg-3 col-3">
                            <div class="form-group">
                                <button class="btn btn-primary">Rechercher</button>
                            </div>
                        </div>
                        <div class="col-lg-3 col-3" hidden>
                            {{ form_rest(form) }}
                        </div>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">tâches Table</h3>
                        <div class="box-tools">
                            <div class="input-group input-group-sm" style="width: 150px;">
                                <input id="myInput" type="text" placeholder="Search..">
                            </div>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover" id="table_id">
                            <thead>
                            <tr>
{#                                <th>ID</th>#}
                                <th>project</th>
                                <th>sprint</th>
                                <th>tâche</th>
                                <th>status</th>
                                <th>priorite</th>
                                <th>duree</th>
                                <th>date_debut</th>
                                <th>date_fin</th>
                                <th>Users</th>
                                <th>Avencement</th>
                                <th>Description</th>
                                <th>
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <a  class="btn btn-success" href={{ path("create_task") }}>Créer</a>
                                    {% endif %}
                                </th>
                            </tr>
                            </thead>
                            <tbody id="myTable">
                                {% for task in Tasks %}
                                    <tr>
{#                                        <td>{{ task.id }}</td>#}
                                        <td>{{ task.projects.name}}</td>
                                        <td>{{ task.sprint.name}}</td>
                                        <td>{{ task.taskname}}</td>
                                        <td>{{ task.status}}</td>
                                        <td>{{ task.priorite }}</td>
                                        <td>{{ task.duree}}</td>
                                        <td>{{ task.datedebut|date('d/m/Y')}}</td>
                                        <td>{{ task.datefin|date('d/m/Y')}}</td>
                                        <td>
                                            {% for user in task.users  %}
                                                {{ user.lastName }}
                                            {% endfor %}
                                        </td>
                                        <td>{{ task.avancement}} %</td>
                                        <td>{{ task.description}} </td>
                                        <td >
                                            <a  class="btn bg-info" href={{ path("update_task", {"id": task.id}) }} , style="display: inline-block"> Update </a>
                                            {% if is_granted('ROLE_ADMIN') %}
                                                <a  class="btn btn-info" href={{ path("edit_task", {"id": task.id}) }}, style="display: inline-block"> Editer </a>
                                                <a  class="btn btn-danger" onclick="return confirm('Etes vous sur ???');"
                                                    href={{ path("delete_task", {"id": task.id}) }} , style="display: inline-block" > Supprimer </a>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>

                        <div class="navigation d-flex text-center justify-content-center">
                            {{ knp_pagination_render(Tasks) }}
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
        </div>
    </section>

    <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });

        $(document).ready( function () {
            $('#table_id').DataTable({
                paging: false ,
                searching: false
            });
        });
    </script>

{% endblock %}
