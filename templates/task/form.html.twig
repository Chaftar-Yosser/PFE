{% block body %}
    <div class="container-xxl flex-grow-1 container-p-y">
        <!-- Basic Layout & Basic with Icons -->
        <div class="row">
            <!-- Basic with Icons -->
            <div class="col-xxl">
                <div class="card mb-4">
                    <div class="card-header d-flex align-items-center justify-content-between">
                        <h5 class="mb-0">Des TÃ¢ches pour le sprint {{ sprint.name }} du projet {{ project.name }}</h5>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">{{ form_label(form.task_name) }}</label>
                            <div class="col-sm-10">
                                <div class="input-group input-group-merge">
                                    <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bx-user"></i></span>
                                    {{ form_widget(form.task_name) }}
                                    <div class="form-error">
                                        {{ form_errors(form.task_name) }}
                                    </div>
                                    <span class="input-group-text"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-icon-default-email">{{ form_label(form.priorite) }}</label>
                            <div class="col-sm-10">
                                <div class="input-group input-group-merge">
                                    <span class="input-group-text"><i> Options</i></span>
                                    {{ form_widget(form.priorite , {'attr' : {'class' : 'form-select'}}) }}
                                    <div class="form-error">
                                        {{ form_errors(form.priorite) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 form-label" for="basic-icon-default-message"> {{ form_label(form.duree) }}</label>
                            <div class="col-sm-10">
                                <div class="input-group input-group-merge">
                                    <span id="basic-icon-default-message2"  class="input-group-text"><i class="bx bx-time"></i></span>
                                    {{ form_widget(form.duree , {'attr' : {'class' : 'form-select'}}) }}
                                    <div class="form-error">
                                        {{ form_errors(form.duree) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 form-label" for="basic-icon-default-message"> {{ form_label(form.status) }}</label>
                            <div class="col-sm-10">
                                <div class="input-group input-group-merge">
                                    <span id="basic-icon-default-message2"  class="input-group-text"><i class="bx bx-time"></i></span>
                                    {{ form_widget(form.status , {'attr' : {'class' : 'form-select'}}) }}
                                    <div class="form-error">
                                        {{ form_errors(form.status) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 form-label" for="basic-icon-default-message">{{ form_label(form.date_debut) }}</label>
                            <div class="col-sm-10">
                                <div class="input-group input-group-merge">
                                    <span id="basic-icon-default-message2" class="input-group-text"><i class="bx bx-calendar"></i></span>
                                    {{ form_widget(form.date_debut ) }}
                                    <div class="form-error">
                                        {{ form_errors(form.date_debut) }}
                                    </div>
                                    <span class="input-group-text"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 form-label" for="basic-icon-default-message">{{ form_label(form.date_fin) }}</label>
                            <div class="col-sm-10">
                                <div class="input-group input-group-merge">
                                    <span id="basic-icon-default-message2" class="input-group-text"><i class="bx bx-calendar"></i></span>
                                    {{ form_widget(form.date_fin) }}
                                    <div class="form-error">
                                        {{ form_errors(form.date_fin) }}
                                    </div>
                                    <span class="input-group-text"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-icon-default-message"> {{ form_label(form.users) }}</label>
                            <div class="col-sm-10">
                                <div class="input-group input-group-merge">
                                    {{ form_widget(form.users) }}
                                    <div class="form-error">
                                        {{ form_errors(form.users) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-10">
                                <div class="input-group input-group-merge">
                                    <div class="col-lg-3 col-3" hidden>
                                        {{ form_rest(form) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row justify-content-end">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">{{ button }}</button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $('.select2').select2();
        })
    </script>
{% endblock %}





