{% block body %}
    <div class="box box-primary">
        <!-- form start -->
        {{ form_start(form) }}
        <div class="box-body">
            <div class="form-group">
                {{ form_label(form.task_name) }}
                {{ form_widget(form.task_name) }}
                <div class="form-error">
                    {{ form_errors(form.task_name) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.Projects) }}
                {{ form_widget(form.Projects) }}
                <div class="form-error">
                    {{ form_errors(form.Projects) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.sprint) }}
                {{ form_widget(form.sprint) }}
                <div class="form-error">
                    {{ form_errors(form.sprint) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.users) }}
                {{ form_widget(form.users) }}
                <div class="form-error">
                    {{ form_errors(form.users) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.priorite) }}
                {{ form_widget(form.priorite) }}
                <div class="form-error">
                    {{ form_errors(form.priorite) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.duree) }}
                {{ form_widget(form.duree) }}
                <div class="form-error">
                    {{ form_errors(form.duree) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.status) }}
                {{ form_widget(form.status) }}
                <div class="form-error">
                    {{ form_errors(form.status) }}
                </div>
            </div>
            <div class="form-group">
                <i class="fa fa-calendar"></i>
                {{ form_label(form.date_debut) }}
                {{ form_widget(form.date_debut) }}
                <div class="form-error">
                    {{ form_errors(form.date_debut) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.date_fin) }}
                {{ form_widget(form.date_fin) }}
                <div class="form-error">
                    {{ form_errors(form.date_fin) }}
                </div>
            </div>
            <div class="col-lg-3 col-3" hidden>
                {{ form_rest(form) }}
            </div>
        </div>
        <!-- /.box-body -->

        <div class="box-footer">
            <input type="submit" class="btn btn-primary" value="{{ button }}"/>
        </div>
        {{ form_end(form) }}
    </div>

    <script>
        $(document).ready(function () {
            $('.select2').select2();
        })
    </script>

{% endblock %}

