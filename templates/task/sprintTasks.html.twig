{% extends 'template.html.twig' %}

{% block title %} Les Tâches {% endblock %}

{% block body %}
    <div class="container text-center mt-4">
{#        <h4> avancement de ce sprint : {{ percent }} %</h4>#}
    </div>
    <div class="card">
        <div class="box-header">
            <h5 class="card-header">Liste des Tâches de sprint : {{ sprint.name }}
                {% if is_granted('ROLE_ADMIN') %}
                    <a class="modal-effect btn btn-sm btn-outline-success" href="{{ path("create_task" , {"id": project.id , "sprintId":sprint.id }) }}">Ajouter</a>
                {% endif %}
            </h5>
            <div class="row justify-content-end mb-2">
                <div class="box-tools col-3">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input id="search" type="text" placeholder="Search..">
                    </div>
                </div>
            </div>
        </div>

        <div class="table-responsive text-nowrap m-2">
            <table class="table table-hover table-sm">
                <thead>
                <tr>
                    <th>tâche</th>
                    <th>status</th>
                    <th>priorite</th>
                    <th>duree</th>
                    <th>date_debut</th>
                    <th>date_fin</th>
                    <th>Users</th>
                    <th>Avencement</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody id="myTable" class="table-border-bottom-0">
                {% for task in tasks %}
                    <tr>
                        <td>
                            <i class="fab fa-angular fa-lg text-danger me-3"></i>
                            <strong>{{ task.taskname}}</strong>
                        </td>
                        <td>
                            <span class="badge {% if (task.status == "En Cours") %} bg-label-warning
                                    {% elseif( task.status == "En Pause") %} bg-label-danger
                                    {% else %} bg-label-info  {% endif %} me-1">
                                {{ task.status}}
                            </span>
                        </td>
                        <td>{{ task.priorite }}</td>
                        <td>{{ task.duree}}</td>
                        <td>{{ task.datedebut|date('d/m/Y')}}</td>
                        <td>{{ task.datefin|date('d/m/Y')}}</td>
                        <td>
                            <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                {% for user in task.users %}
                                    <li data-bs-toggle="tooltip" data-popup="tooltip-custom" data-bs-placement="top" class="avatar avatar-xs pull-up" title="" data-bs-original-title="{{ user.lastname}}">
                                        <img src="{{ asset('images/'~user.image) }}" alt="Avatar" class="rounded-circle">
                                    </li>
                                {% endfor %}
                            </ul>
                        </td>
                        <td>
                            <div class="demo-vertical-spacing">
                                <div class="progress">
                                    <div
                                            class="progress-bar progress-bar-striped progress-bar-animated bg-warning"
                                            role="progressbar"
                                            style="width:{{ task.avancement}}%"
                                            aria-valuenow="{{ task.avancement}}%"
                                            aria-valuemin="0"
                                            aria-valuemax="100"
                                    >
                                        {{ task.avancement}}
                                        {% if not loop.last %} % {% endif %}
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td>{{ task.description}} </td>
                        <td>
                            {% if is_granted('ROLE_ADMIN') %}
                                <a  class="btn btn-sm btn-outline-info" href="{{ path("edit_task", {"projectId" :project.id , "sprintId":sprint.id , "taskId": task.id}) }}"
                                    data-bs-toggle="tooltip" data-popup="tooltip-custom" data-bs-placement="top"  title="" data-bs-original-title="Edit"
                                > <i class="bx bx-edit-alt me-1 "></i></a>

                                <button  class="btn btn-sm btn-outline-danger "
                                         data-bs-toggle="modal" data-bs-target="#modalToggle{{ task.id }}" data-popup="tooltip-custom" data-bs-placement="top"  title="" data-bs-original-title="Delete"
                                ><i class="bx bx-trash me-1"></i></button>
                                <!-- Modal de confirmation de suppression -->
                                <div class="modal fade" id="modalToggle{{ task.id }}" aria-labelledby="modalToggleLabel" tabindex="-1" style="display: none" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-body">
                                                Êtes-vous sûr de pour supprimer cette tâche ???
                                            </div>
                                            <div class="modal-footer">
                                                <a   class="btn btn-sm btn-danger" href="{{ path("delete_task", {"projectId" :project.id , "sprintId":sprint.id , "taskId": task.id}) }}">Confirmer
                                                </a>
                                                <a class="btn btn-sm btn-outline-secondary" data-bs-target="#modalToggle2" data-bs-toggle="modal" data-bs-dismiss="modal">
                                                    Annuller
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            {% endif %}
                            <a class="btn btn-sm btn-outline-secondary" href="{{ path("update_task", {"projectId" :project.id ,"sprintId":sprint.id , "taskId": task.id}) }}"
                                   data-bs-toggle="tooltip" data-popup="tooltip-custom" data-bs-placement="top"  title="" data-bs-original-title="Update"
                            ><i class="bx bx-edit-alt me-1"></i></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="content-wrapper">
            <div class="demo-inline-spacing">
                <!-- Basic Pagination -->
                <nav aria-label="Page navigation">
                    <ul class="pagination d-flex text-center justify-content-center">
                        {{ knp_pagination_render(tasks) }}
                    </ul>
                </nav>
            </div>
            <div class="content-backdrop fade"></div>
        </div>
    </div>

    <div class="content-wrapper">
        <div class="demo-inline-spacing">
            <!-- Basic Pagination -->
            <nav aria-label="Page navigation">
                <ul class="pagination d-flex text-center ">
                    <a class="btn btn-sm btn-outline-danger" href={{ path("sprint_index" ,  {"id" :project.id ,"sprintId":sprint.id} )}}, style="display: inline-block"> <i class="bx bx-log-out me-2"></i>Back To..  </a>
                </ul>
            </nav>
        </div>
        <div class="content-backdrop fade"></div>
    </div>

    <script>
        $(document).ready(function(){
            $("#search").on("keyup", function() {
                var value = $(this).val().toLowerCase();

                $("#myTable tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>

{% endblock %}
